<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5BBA8F3"
    android:orientation="vertical"
    android:paddingEnd="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="#C3AAEF"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingStart="5dp"
            android:text="Enter Height : "
            android:textColor="#4403A0"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/editTextNumberHeight"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="number cm"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#020202"
            android:textColorHighlight="#673AB7"
            android:textColorLink="#9C27B0"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textViewHeight"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="#F1E9FB"
            android:hint=" meter"
            android:textAlignment="center"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewWight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#C8A9F4"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingStart="5dp"
            android:text="Enter Weight : "
            android:textColor="#4403A0"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/editTextNumberWeight"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="number Kg"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColorHighlight="#673AB7"
            android:textColorLink="#9C27B0"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewWeight"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="#F3E9FD"
            android:hint=" Kilogram "
            android:paddingEnd="5dp"
            android:textAlignment="center"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonBMI"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#A97EF6"
            android:paddingStart="2dp"
            android:paddingRight="2dp"
            android:text="BMI"
            android:textColor="#FAFBFB"
            android:textSize="16dp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textViewBMI"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="#E2DBEF"
            android:paddingEnd="4dp"
            android:textAlignment="center"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewUN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:freezesText="false"
            android:paddingStart="4dp"
            android:text="Under weigt"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#4403A0"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewNO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:shadowColor="#4403A0"
            android:text="Normal"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#4403A0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewOV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:shadowColor="#4403A0"
            android:text="Over Weight"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#4403A0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewOB"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingStart="4dp"
            android:text="Obesity"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#4403A0"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewLevel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#3E0A9A"
        android:fontFamily="sans-serif-condensed-medium"
        android:paddingStart="7dp"
        android:paddingTop="7dp"
        android:text="Activity Level "
        android:textAlignment="textStart"
        android:textColor="#ECE4ED"
        android:textColorHighlight="#9C27B0"
        android:textColorLink="#673AB7"
        android:textSize="19dp"
        android:textStyle="normal" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonLow"
            android:layout_width="106dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="Low"
            android:textColor="#190340"
            android:textColorHighlight="#C9B0F4"
            android:textColorLink="#C9B0F4"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonModerate"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginLeft="25dp"
            android:text="Moderate"
            android:textColor="#190340"
            android:textColorHighlight="#C9B0F4"
            android:textColorLink="#C9B0F4"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonheavy"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:minHeight="48dp"
            android:text="Heavy"
            android:textColor="#190340"
            android:textColorHighlight="#C9B0F4"
            android:textColorLink="#C9B0F4"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewgender"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#3E0A9A"
        android:paddingStart="7dp"
        android:paddingTop="7dp"
        android:paddingRight="10dp"
        android:text="Gender"
        android:textAlignment="textStart"
        android:textColor="#F0ECF8"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#9C27B0"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonmale"
            android:layout_width="131dp"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:text="Male"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#2B1355"
            android:textColorHighlight="#C9B0F4"
            android:textColorLink="#C9B0F4"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonfemale"
            android:layout_width="168dp"
            android:layout_height="48dp"
            android:layout_marginLeft="60dp"
            android:text="Female"
            android:textColor="#2B1355"
            android:textColorHighlight="#C9B0F4"
            android:textColorLink="#C9B0F4"
            android:textStyle="bold" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCal"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Calories"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textViewcal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#E4DBF1"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>